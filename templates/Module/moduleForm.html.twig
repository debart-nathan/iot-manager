{% extends 'base.html.twig' %}

{% block title %}Module Form
{% endblock %}

{% block main %}


	{% for message in app.flashes('error') %}
		<div class="flash-error">
			{{ message|nl2br }}
		</div>
	{% endfor %}

	<div class=" container">
		<h1 class=" m-4">Ajout√© un Nouveau Module</h1>
		<section>
			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{{ form_label(form.module_type_name, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class=" d-flex flex-column allign-items-center">
					{{ form_widget(form.module_type_name, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.module_type_name, {'attr': {'class': 'text-danger'}}) }}
					<div class="row d-flex justify-content-center">
						<div class="col-5 col-md-2">
							<img id="module-type-picture" src="default.png" data-src="{{ asset('build/images/default.png') }}" alt="Module Type Picture" class="img-fluid fitted-image">
						</div>
						<div class="col-12 col-md-10" id="module-type-description" style="min-height: 50px;"></div>
					</div>
				</div>
			</div>
			<div class="form-goup d-flex justify-content-around">
				{{ form_rest(form) }}
			</div>
			<div class="form-group">
				<div class=" m-5 d-flex justify-content-center">
					<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
				</div>
			</div>
			{{ form_end(form) }}
		</section>
	</div>


{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('moduleForm') }}
{% endblock %}
